<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddeff0"
    android:orientation="vertical"
    tools:context=".Crear_Cuenta">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins"
        android:text="Crear Cuenta"
        android:textAlignment="center"
        android:textColor="#325158"
        android:textSize="34sp"
        android:typeface="normal" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextRUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="R.U.T"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Saldo Inicial"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Clave"
        android:inputType="numberPassword"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editTextRepetirClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Repetir Clave"
        android:inputType="numberPassword"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#92CACE"
        android:fontFamily="@font/poppins"
        android:insetLeft="20dp"
        android:insetRight="20dp"
        android:text="CREAR"
        android:textColor="#356169" />

    <Button
        android:id="@+id/btnVolverC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#92CACE"
        android:fontFamily="@font/poppins"
        android:insetLeft="20dp"
        android:insetRight="20dp"
        android:text="VOLVER"
        android:textColor="#356169" />

</LinearLayout>